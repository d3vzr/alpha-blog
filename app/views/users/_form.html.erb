<%= render 'shared/errors', obj: @user %>
<div class = "row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal",role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :username %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :username, class: "form-control", placeholder: "enter username", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :email %>
      </div>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "enter email"%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :password %>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password , class: "form-control", placeholder: "enter password"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12"><br>
        <%= f.submit(@user.new_record? ? "Sign up" : "update account", class:"btn btn-success btn-lg" ) %>
      </div>
    </div>

    <% end %>

    <%= link_to 'Back to articles' , articles_path, class: "btn btn-xs btn-info" %>
  </div>
</div>