<h1 align="center">Login</h1>
<%= form_for(:session, :html => {class: "form-horizontal",role: "form"}, url:login_path) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-3">
      <%= f.label :email %>
    </div>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", placeholder: "enter email", autofocus: true%>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-3">
      <%= f.label :password %>
    </div>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", autocompelete:"off"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12"><br>
      <%= f.submit "Login", class:"btn btn-success btn-lg" %>
    </div>
  </div>

<% end %>