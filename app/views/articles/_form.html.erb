<%= render 'shared/errors', obj: @article %>
<div class = "row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal",role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :title %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "title of the article ", autofocus: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-3">
        <%= f.label :description %>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :description,rows: 10, class: "form-control", placeholder: "article description"%>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-12"><br>
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox"){cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12"><br>
        <%= f.submit :Submit, class:"btn btn-success btn-lg  btn-raised" %>
      </div>
    </div>

    <% end %>

    <%= link_to 'Back to articles' , articles_path, class: "btn btn-xs btn-info  btn-raised" %>
  </div>
</div>